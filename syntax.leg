  bformata(image_variables, "=\"%s\"", yytext);
}

# Tables
table = '{|' 
  { bprintf("<table>"); }
  eol table_body '|}' ( eol | eof )
  { bprintf("</table>"); }
table_body = table_caption? table_header? table_row+
table_caption = '|+' ' '+ < ( !eol . )* > eol { bprintf("<caption>%s</caption>", yytext); }
table_row = '|-'
  { bprintf("<tr>"); }
  space* eol table_heading* table_cell*
  { bprintf("</tr>"); }
