  { bprintf("<td>"); }
  ' '+ < ( !'||' !eol . )* > ( eol | '||' )
  { bprintf("%s</td>", yytext); }
table_header = { bprintf("<tr>"); } table_heading+ { bprintf("</tr>"); }
table_heading = { bprintf("<th"); }'!' ' '+ < ( !' |' . )* > { bprintf(" %s>", yytext); } ' |' space* < ( !eol . )* > eol {bprintf("%s</th>", yytext); }

# Templates
